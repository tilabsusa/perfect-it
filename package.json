{
  "name": "aws-amplify-gen2",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky",
    "test": "jest && npm run test:lambda",
    "test:app": "jest",
    "test:lambda": "cd amplify/functions/post-confirmation && npm test",
    "test:lambda:coverage": "cd amplify/functions/post-confirmation && npm test -- --coverage",
    "test:unit": "jest --coverage",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2 --passWithNoTests",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.test.[jt]s?(x)' --passWithNoTests",
    "test:e2e:headless": "playwright test --headed=false --reporter=list",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run lint && npm run prettier:check && npm run test:coverage && npm run test:lambda:coverage && npm run test:e2e:headless",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write ."
  },
  "dependencies": {
    "@aws-amplify/adapter-nextjs": "^1.6.8",
    "@aws-amplify/ui-react": "^6.1.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/material": "^5.15.0",
    "aws-amplify": "^6.6.6",
    "next": "14.2.10",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@aws-amplify/backend": "^1.5.1",
    "@aws-amplify/backend-cli": "^1.3.0",
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.41.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "aws-cdk": "^2",
    "aws-cdk-lib": "^2",
    "constructs": "^10.3.0",
    "esbuild": "^0.23.1",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.4.6",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "msw": "^2.10.4",
    "prettier": "^3.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2"
  }
}
